<div class="container">
    <row class="mt-5">
        {{#if personas}}
            <table class="table table-dark table-striped text-center" style="margin: 10px;">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{lastname}}</td>
                            <td>{{age}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning" style="margin: 10px;">Editar</a>
                                    <a href="/delete/{{id}}" class="btn btn-danger" style="margin: 10px;">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Registro de personal</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="card mx-auto" style="width: 350px;">
            <h3>Crea algo aqui por favor</h3>
        </div>
        <div class="card-body text-center" >
            <p>Presiona aqui y veras la magia</p>
            <a href="#" class="btn btn-primary">ir a crear</a>
        {{/if}}
    </row>
</div>